{
  "name": "Jira Issue Opener",
  "short_name": "Jira Opener",
  "version": "1.0",
  "author": "webbutler",
  "homepage_url": "https://github.com/AButler/jira-issue-opener-extension",
  "default_locale": "en",
  "description": "Opens Jira links",
  "permissions": ["activeTab", "storage"],
  "options_ui": { 
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_action": {
    "default_title": "Open in Jira",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/jira-16.png",
    "32": "images/jira-32.png",
    "48": "images/jira-48.png",
    "128": "images/jira-128.png"
  },
  "manifest_version": 2
}