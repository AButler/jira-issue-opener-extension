{
  "name": "JIRA Opener Extension",
  "version": "1.0",
  "description": "Opens JIRA links",
  "permissions": ["activeTab", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": { 
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_action": {
    "default_title": "Open in JIRA",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/jira-16.png",
    "32": "images/jira-32.png",
    "48": "images/jira-48.png",
    "128": "images/jira-128.png"
  },
  "manifest_version": 2
}